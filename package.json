{
  "name": "taskr",
  "version": "0.0.1",
  "description": "Main Taskr",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "start": "concurrently \"npm:server\" \"npm:client\"",
    "test": "node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "testing": "jest --watch"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [],
  "author": {
    "name": "Devon Yu",
    "email": "devonyu415@gmail.com",
    "url": "https://devonyu.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devonyu/taskr"
  },
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "jest-enzyme": "^6.0.2"
  }
}